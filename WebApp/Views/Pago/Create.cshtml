@using LogicaDeNegocio.Enums
@model LogicaDeAplicacion.DTOs.PagoDTO


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PagoDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="MetodoDePago" class="control-label"></label>
                <select asp-for="MetodoDePago" class="form-control"
                        asp-items="Html.GetEnumSelectList<MetodoDePago>()">
                    <option value="">-- Seleccione un método de pago --</option>
                </select>
                <span asp-validation-for="MetodoDePago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoDePago" class="control-label"></label>
                <select asp-for="TipoDePago" class="form-control"
                        asp-items="Html.GetEnumSelectList<TipoDePago>()">
                    <option value="">-- Seleccione el tipo de pago --</option>
                </select>
                <span asp-validation-for="TipoDePago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontoTotal"></label>
                <input asp-for="MontoTotal" class="form-control" />
                <span asp-validation-for="MontoTotal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoDeGastoId"></label>
                <input asp-for="TipoDeGastoId" class="form-control" />
                <span asp-validation-for="TipoDeGastoId" class="text-danger"></span>
            </div>

            <!-- Campos para Pago Único -->
            <div id="campos-unico" style="display:none;">
                <div class="form-group">
                    <label asp-for="FechaPago"></label>
                    <input asp-for="FechaPago" class="form-control" />
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumFactura"></label>
                    <input asp-for="NumFactura" class="form-control" />
                    <span asp-validation-for="NumFactura" class="text-danger"></span>
                </div>
            </div>

            <!-- Campos para Pago Recurrente -->
            <div id="campos-recurrente" style="display:none;">
                <div class="form-group">
                    <label asp-for="FechaDesde"></label>
                    <input asp-for="FechaDesde" class="form-control" />
                    <span asp-validation-for="FechaDesde" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaHasta"></label>
                    <input asp-for="FechaHasta" class="form-control" />
                    <span asp-validation-for="FechaHasta" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/Pagos.js"></script>
}
